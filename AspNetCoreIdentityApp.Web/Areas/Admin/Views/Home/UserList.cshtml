
@{
    ViewData["Title"] = "UserList";
}
@model List<AdminModel.UserViewModel>

<h1>Üye Liste</h1>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Id</th>
            <th>Kullanıcı Adı</th>
            <th>Email</th>
            <th>Roller</th>
            <th>Rol İşlemleri</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Id</td>
                <td>@user.Name</td>
                <td>@user.Email</td>
                <td>  <user-role-names user-id="@user.Id"> </user-role-names> </td>
                <td><a class="btn btn-success btn-sm" asp-area="Admin" asp-controller="Roles" asp-action="AssignRoleToUser" asp-route-id="@user.Id">Güncelle</a></td>
            </tr>
        }
    </tbody>
</table>